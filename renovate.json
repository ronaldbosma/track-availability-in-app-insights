{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "replacements:all",
    "workarounds:all",
    "group:all"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "dotnet-sdk"
      ],
      "matchFileNames": [
        "src/logicApp/Functions/TrackAvailabilityInAppInsights.LogicApp.Functions.csproj"
      ],
      "allowedVersions": "8.*",
      "description": "Logic App custom code projects should use .NET 8."
    },
    {
      "matchPackageNames": [
        "Microsoft.Azure.Functions.Worker.Sdk",
        "Microsoft.Extensions.Logging.Abstractions",
        "Microsoft.Extensions.Logging",
        "Azure.Identity"
      ],
      "matchFileNames": [
        "src/logicApp/Functions/TrackAvailabilityInAppInsights.LogicApp.Functions.csproj"
      ],
      "enabled": false,
      "description": "Disable updates for specific packages in Logic App custom code projects, because these require specific versions to match the Logic App runtime."
    },
    {
      "matchPackageNames": [
        "Microsoft.ApplicationInsights.WorkerService",
        "Microsoft.ApplicationInsights"
      ],
      "allowedVersions": "<3",
      "description": "Microsoft.ApplicationInsights.WorkerService 3.0.0 is incompatible with the Azure Functions Worker. See https://github.com/Azure/azure-functions-dotnet-worker/issues/3322"
    }
  ]
}
