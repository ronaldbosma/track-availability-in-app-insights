{
    "definition": {
        "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
        "actions": {
            "Track_is_available_(in_App_Insights)": {
                "type": "InvokeFunction",
                "inputs": {
                    "functionName": "TrackAvailability",
                    "parameters": {
                        "testName": "@variables('TestName')",
                        "success": true,
                        "message": "NA"
                    }
                },
                "runAfter": {
                    "HTTP": [
                        "SUCCEEDED"
                    ]
                }
            },
            "HTTP": {
                "type": "Http",
                "inputs": {
                    "uri": "@{parameters('api-management-gateway-url')}@{triggerBody()?['urlToTest']}",
                    "method": "GET",
                    "headers": {
                        "Ocp-Apim-Subscription-Key": "@{parameters('api-management-subscription-key')}"
                    },
                    "retryPolicy": {
                        "type": "none"
                    }
                },
                "runAfter": {
                    "Initialize_TestName": [
                        "SUCCEEDED"
                    ]
                },
                "runtimeConfiguration": {
                    "contentTransfer": {
                        "transferMode": "Chunked"
                    }
                }
            },
            "Track_is_unavailable_(in_App_Insights)": {
                "type": "InvokeFunction",
                "inputs": {
                    "functionName": "TrackAvailability",
                    "parameters": {
                        "testName": "@variables('TestName')",
                        "success": false,
                        "message": "@concat('HTTP call failed with status code ', outputs('HTTP')?['statusCode'], ' and response body: ', body('HTTP'))"
                    }
                },
                "runAfter": {
                    "HTTP": [
                        "TIMEDOUT",
                        "SKIPPED",
                        "FAILED"
                    ]
                }
            },
            "Response_Available": {
                "type": "Response",
                "kind": "Http",
                "inputs": {
                    "statusCode": 200,
                    "body": {
                        "status": "available"
                    }
                },
                "runAfter": {
                    "Track_is_available_(in_App_Insights)": [
                        "SUCCEEDED"
                    ]
                }
            },
            "Response_Unavailable": {
                "type": "Response",
                "kind": "Http",
                "inputs": {
                    "statusCode": 503,
                    "body": {
                        "status": "unavailable"
                    }
                },
                "runAfter": {
                    "Track_is_unavailable_(in_App_Insights)": [
                        "SUCCEEDED"
                    ]
                }
            },
            "Initialize_TestName": {
                "type": "InitializeVariable",
                "inputs": {
                    "variables": [
                        {
                            "name": "TestName",
                            "type": "string",
                            "value": "Logic App Workflow - Backend API Status Test"
                        }
                    ]
                },
                "runAfter": {}
            }
        },
        "triggers": {
            "When_a_HTTP_request_is_received": {
                "type": "Request",
                "kind": "Http",
                "inputs": {
                    "method": "POST",
                    "schema": {
                        "type": "object",
                        "properties": {
                            "urlToTest": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "contentVersion": "1.0.0.0",
        "outputs": {}
    },
    "kind": "Stateful"
}