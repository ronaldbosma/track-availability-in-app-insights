* text=auto eol=lf

# Source code - enforce LF
*.bicep  text eol=lf
*.cs     text eol=lf diff=csharp
*.csproj text eol=lf
*.dbproj text eol=lf
*.json   text eol=lf
*.ps1    text eol=lf
*.psm1   text eol=lf
*.psd1   text eol=lf
*.sln    text eol=lf
*.slnx   text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf

# Scripts - enforce LF
*.bash text eol=lf
*.sh   text eol=lf

# Config files - enforce LF
*.config text eol=lf
*.toml   text eol=lf
*.xml   text eol=lf

# Binary files - don't convert
*.bmp  binary
*.dll  binary
*.exe  binary
*.gif  binary
*.isma binary
*.ismv binary
*.jpg  binary
*.jpeg binary
*.mp4  binary
*.pdf  binary
*.png  binary
*.snk  binary
*.wmv  binary
*.zip  binary
